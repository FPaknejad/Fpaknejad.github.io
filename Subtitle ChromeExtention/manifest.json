{
  "manifest_version": 3,
  "name": "Dual Subtitles (Any Player)",
  "version": "1.0.0",
  "description": "Show two subtitle languages stacked on any custom video player.",
  "icons": { "128": "icons/icon128.png" },
  "action": { "default_popup": "popup.html" },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}