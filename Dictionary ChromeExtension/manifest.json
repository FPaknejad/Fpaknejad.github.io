{
  "manifest_version": 3,
  "name": "LEO Quick Dictionary",
  "version": "1.1",
  "description": "Translate highlighted German words using LEO.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://dict.leo.org/*",
    "https://*.leo.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}